#!/usr/bin/env sh

THIS=$(basename $0)
DIR="$( cd -P "$( dirname "$0" )" && pwd )"
cd $DIR
cd ..
CURR_FOLDER=`pwd`

# Root
cd $CURR_FOLDER

# Sync
rsync $CURR_FOLDER/. lagden.in:/home/lagden/projects/sfBreno --rsh ssh --copy-links --recursive --delete --exclude-from $CURR_FOLDER/rsync_exclude --verbose > rsync_exclude.log

ssh -T lagden.in <<EOF

cd ~/projects/sfBreno/.

# Composer
composer.phar update

# Fix
bin/setup -f
bin/fix -s

exit 0
EOF

echo "                                "
echo "< Deploy finalizado... Yeahh!! >"
echo "------------------------------  "
echo "        \   ^__^                "
echo "         \  (oo)\_______        "
echo "            (__)\       )\/\    "
echo "                ||----w |       "
echo "                ||     ||       "
echo "                                "

exit 0
