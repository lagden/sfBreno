@import 'component/galery'
@import 'component/estate-list'

html
  font-family: Roboto, "Helvetica Neue", Helvetica, sans-serif;
  color: $cores.fonte
  background-color: $cores.fundo

a
  unstyledLink()

.pad-30
  padding 30px

.gs
  center(960px, 10px)
  box-sizing border-box
  cf()
  &.gs--flex
    display flex
    flex-wrap wrap

.icon
  display: inline-block
  width: 3em
  height: 3em
  vertical-align middle
  button > &
    fill: #FFF
  & + span
    display: block
    margin 5px

.icon--btn
  display: inline-block
  width: 1.1em
  height: 1.1em
  vertical-align middle
  button > &
    fill: #FFF

.icon--estate
  display: inline-block
  width: 1.5em
  height: 1.5em
  vertical-align middle
  fill: $cores.black

.bloco
  margin 10px 0
  padding 20px 0
  border: 5px solid $cores.border
  border-width: 5px 0
  background-color: $cores.bloco

.bloco--light
  background-color: $cores.light
  color: $cores.black
  background-color black
  background-position 50% 50%, 0 0
  background-attachment fixed, scroll
  background-repeat no-repeat, repeat
  background-size contain, 100px 56px
  background-image: radial-gradient(circle farthest-corner at 50% 0%, rgba(lighten($cores.bebe, 5%), 0.78) 0%, rgba(darken($cores.bebe, 0%), 0.9) 80%), url('../assets/hexa.svg')
