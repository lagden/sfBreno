.logo-breno
  display block
  max-width 160px
  height 100px
  fill: $cores.white
  // +below('m')
  //   width 100px

.bar
  display none
  +below('m')
    display block

.nav--header
  +below('m')
    display none

.nav--out
  display none
  z-index 1001
  position fixed
  top: 0
  bottom: 0
  right: 0
  left auto
  width $menuSize * 1px
  height 100%
  transform translateX($menuSize * 1px)
  overflow-y auto
  background: $cores.bloco
  &.open
    transform translateX(0)
  +below('m')
    display block

.navbar__ul
  position relative
  padding 0
  margin 0
  list-style none
  text-align right
  > li
    display inline-block
    padding 5px
    > a
      color: $cores.white
      backface-visibility hidden
      will-change border-color
      transition 0.5s border-color
      border 2px solid transparent
      border-radius 5px
      display block
      padding 10px
      &:hover
        border-color: $cores.white
    &.active
      > a
        border-color: $cores.white
    +below('m')
      display block

body
  &.open
    overflow: hidden

.burger-bl
  display none
  +below('m')
    display block

.header-bg
  background: rgba($cores.sol, 0.8);
  transform translate(0, 20px)
  width 100%
  box-sizing border-box
  padding 5px
  position absolute
  z-index 1000
  display flex
  flex-wrap nowrap
  justify-content space-between
  align-items center
  &.open
    transform translate($menuSize * -1px, 20px)
  &.open ~ main
    transform translateX($menuSize * -1px)

.header__title
  margin 0
  padding 0

.header-bg,
.navbar,
main
  transition transform 0.3s ease-out
