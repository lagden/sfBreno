duration = 0.45s

$modalLayout
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  margin auto
  width 100%
  height 100%
  overflow hidden
  background-color rgba(red, 0.8)
  color white
  backface-visibility hidden
  will-change transform, visibility

  visibility hidden
  transform translateY(-100%)
  transition transform duration, visibility 0s duration

  &:focus
    outline none

.modalLayout
  @extend $modalLayout

.modalLayout--open
  visibility visible
  transform translate(0%)
  transition: transform duration

.modalLayout__aviso
  position fixed
  background-color rgba(red, 0.8)
  color white
  z-index 9999
  width 100%
  padding 1em
  box-sizing border-box
