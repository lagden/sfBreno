form
  box-sizing border-box
  margin 0
  padding 0
  display block

button
  btn($cores.sol, $cores.white)

input[type="checkbox"]
  transform translateY(2px)

input[type="text"],
input[type="email"],
input[type="tel"],
input[type="number"],
textarea
  appearance: none
  background-color: $cores.form
  box-sizing: border-box
  border-radius: 5px
  border 0
  width 100%
  padding 10px
  white-space normal
  color: $cores.white
  &:hover
    background: darken($cores.form, 10%)
  &:active,
  &:focus
    outline: none
    background: lighten($cores.form, 10%)

textarea
  min-height: 50px
  overflow: auto
  resize: vertical
  width: 100%

select,
select[size="0"],
select[size="1"]
  appearance: none
  background-image: url('data:image/svg+xml;utf8,%3Csvg%20version%3D%221.1%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20xmlns%3Axlink%3D%22http%3A%2F%2Fwww.w3.org%2F1999%2Fxlink%22%20width%3D%2224%22%20height%3D%2224%22%20viewBox%3D%220%200%2024%2024%22%3E%3Cpath%20fill%3D%22%23FFF%22%20d%3D%22M7.406%207.828l4.594%204.594%204.594-4.594%201.406%201.406-6%206-6-6z%22%3E%3C%2Fpath%3E%3C%2Fsvg%3E');
  background-repeat: no-repeat
  background-position: calc(100% - 10px) center
  background-size: 24px
  background-color: $cores.form
  box-sizing: border-box
  border-radius: 5px
  border: 0
  width 100%
  padding 10px 34px 10px 10px
  color: $cores.white
  &:hover
    background-color: darken($cores.form, 10%)
  &:active,
  &:focus
    outline: none
    background-color: lighten($cores.form, 10%)

select::-ms-expand
  display: none

select[size],
select[multiple]
  background-image: none

select[multiple]
  // background-image url('data:image/svg+xml;utf8,%3Csvg%20version%3D%221.1%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20xmlns%3Axlink%3D%22http%3A%2F%2Fwww.w3.org%2F1999%2Fxlink%22%20width%3D%2224%22%20height%3D%2224%22%20viewBox%3D%220%200%2024%2024%22%3E%3Cpath%20fill%3D%22%23FFF%22%20d%3D%22M18.984%2012.984h-6v6h-1.969v-6h-6v-1.969h6v-6h1.969v6h6v1.969z%22%3E%3C%2Fpath%3E%3C%2Fsvg%3E')
  height: 39px
  > option
    padding 3px

.form__input
  margin-bottom 10px
  > label
    font-size 0.9em
    display block
    margin-bottom 5px
    color: $cores.bebe

.form__btn
  text-align right

.obr
  color: $cores.burn !important