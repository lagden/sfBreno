
button
  btn($cores.sol, $cores.white)

input[type="checkbox"]
  transform translateY(2px)

select,
select[size="0"],
select[size="1"]
  appearance: none
  background-image: url('data:image/svg+xml;utf8,%3Csvg%20version%3D%221.1%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20xmlns%3Axlink%3D%22http%3A%2F%2Fwww.w3.org%2F1999%2Fxlink%22%20width%3D%2224%22%20height%3D%2224%22%20viewBox%3D%220%200%2024%2024%22%3E%3Cpath%20fill%3D%22%23FFF%22%20d%3D%22M7.406%207.828l4.594%204.594%204.594-4.594%201.406%201.406-6%206-6-6z%22%3E%3C%2Fpath%3E%3C%2Fsvg%3E');
  background-repeat: no-repeat
  background-position: calc(100% - 10px) center
  background-size: 24px
  background-color: $cores.form
  box-sizing: border-box
  border-radius: 5px
  border: 0
  width 100%
  padding 10px 34px 10px 10px
  &:hover
    background-color: darken($cores.form, 10%)
  &:active,
  &:focus
    outline: none
    background-color: lighten($cores.form, 10%)

select::-ms-expand
  display: none

select[size], select[multiple]
  background-image: none
